{
    "lib": ["es2015"],
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*"]
        },
        "types": [
            "@types/node", "@types/express", "@types/socket.io"
        ]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}  